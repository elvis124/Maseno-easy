#menu screen
<Menuscreen>:
    cols: 1
    stackforaccounts: stackforaccounts
    StackLayout:
        id: stackforaccounts
        orientation: 'tb-rl'
        cols: 3
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'icons/maseno6.png'
        Button: 
            id: account
            text: 'Account statements'
            font_size: 18
            size_hint: (1, .3)
            background_color: [1,1,1,0]
            on_release: root.mybanks()
        Button: 
            id: documents
            text: 'My documents'
            font_size: 18
            size_hint: (1, .3)
            background_color: [1,1,1,0]
            on_release: root.books()
        Button: 
            id: my_secrets
            text: 'My treasures'
            font_size: 18
            size_hint: (1, .3)
            background_color: [1,1,1,0]
            on_release: root.current='my_secrets'



        
#myprofile settings
<Myprofile>:
    cols: 1
    orientation: 'vertical'
    floatingwidget: floatingwidget
    StackLayout:
        id: floatingwidget
        orientation: 'tb-lr'
        cols: 6
        padding: 10
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'icons/maseno3.png'
        Button:
            text: 'Activity'
            font_size: 12
            background_color: [1,1,1,0]
            size_hint: (1, .2)
            on_press: root.active()
        Button: 
            text: 'photo'
            font_size: 12
            background_color: [1,1,1,0]
            size_hint: (1,.2)
            on_press: root.add_photo()
        Button: 
            id: mystatus
            text: 'status'
            font_size: 12
            size_hint: (1, .2)
            on_release: root.mystatus()
            background_color: [1,1,1,0]
        Button:
            text: 'cv'
            font_size: 12
            size_hint: (1, .2)
            background_color: [1,1,1,0]
        Button: 
            text: 'About'
            font_size: 12
            size_hint: (1, .2)
            background_color: [1,1,1,0]





#my status
<Mystatus>:
    textinput: textinput
    GridLayout:
        cols: 2
        TextInput:
            id: textinput
            text:''
            size_hint: (.4, .4)
        Button:
            text: 'cancel'
            size_hint: (.2, .2)
            on_press: root.cancelstatus()
            background_color: [1,1,1,0]
        Button:
            text: 'post'
            size_hint: (.2,.2)
            on_press: root.poststatus()
            background_color: [1,1,1,0]
        



#music palyer
<Musictoggle>:
    cols: 1
    StackLayout:
        canvas.before:
            Rectangle:
                size: root.size
                pos: root.pos
                source: 'icons.maseno6.png'
        cols: 1
        orientation: 'tb-lr'
        ScrollView:
            FileChooserListView:
                id: filechooser
                on_selection: root.loading(filechooser.path, filechooser.selection)



#adding photo
<Photo>:
    GridLayout:
        size: root.size
        pos: root.pos
        cols: 1
        ScrollView:
            FileChooserListView:
                id: filechooser
                on_selection: root.save(filechooser.selection, filechooser.path)
#adding videos
<Videofiles>:
    cols: 1
    StackLayout:
        canvas.before:
            Rectangle:
                size: root.size
                pos: root.pos
                source: 'icons/maseno6.png'
        orientation: "tb-lr"
        ScrollView:
            bar_width: 3
            FileChooserListView:
                id: filechooser
                on_selection: root.load(filechooser.path, filechooser.selection)


<Search>:
    textinputs: textinputs
    displaycontents: displaycontents
    TextInput:
        id: textinputs
        focus: True
        size_hint: (1, .2)
        pos_hint: {'top': 1}
    FloatLayout:
        id: displaycontents
        pos_hint: {'top': .8}
        size_hint: (1, .8)
        
        


        