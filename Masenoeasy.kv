<Rootwidget>:
    cols: 1
    size_hint: (1,1)
    id: screen_manager
    orientation: 'vertical'
    Floating:
        size_hint: (1, .3)
    Screenbuttons:
        size_hint: (1, .1)
    ScreenManagement:
#root widget settings
<Floating>:
    videowidget: videowidget
    registerwidget: registerwidget
    settings: settings
    helpwidget: helpwidget
    musicwidget: musicwidget
    actionBar: actionBar
    previouswidget: previouswidget
    size_hint: (1, .3)
    textInput: textInput
    GridLayout:
        cols: 1
    ActionBar:
        id: actionBar
        background_color: [0,1,1,1]
        pos_hint: {'top': 1}
        size_hint: (1, 1)
        size: self.size
        pos: self.pos
        ActionView:
            id: previouswidget
            ActionPrevious:
                with_previous: False
                app_icon: 'icons/maseno.png'
                background_color: [1,0,1,1]
                markup: True
                StackLayout:
                    orientation: 'tb-rl'
                    Button:
                        id: registerwidget
                        size_hint: (.2,.4)
                        text: 'Register'
                        font_size: 20
                        background_color: [1,1,1,0]
                        on_release: root.createaccount()

                    Button:
                        text: 'Profile'
                        size_hint: (.3, .4)
                        background_color: [1,1,1,0]
                        on_press: root.myprofile()
                        font_size: 12
                StackLayout:
                    orientation: 'tb-rl'
                    Button:
                        id: videowidget
                        text: 'video '
                        font_size: 12
                        size_hint: (.2,.4)
                        on_release: root.addvideo()
                        background_color: [1,1,1,0]


                    Button:
                        id: musicwidget
                        text:'music'
                        font_size:12
                        size_hint: (.2, .4)
                        on_release: root.musicloader()
                        background_color: [1,1,1,0]
                StackLayout:
                    orientation: 'tb-rl'
                    Button:
                        id: helpwidget
                        text: '  ?  '
                        font_size: 12
                        size_hint: (.2, .4)
                        background_color: [1,1,1,0]
                        on_release: root.help()
                    Button:
                        id: textInput
                        text: 'search'
                        size_hint: (.5, .2)
                        background_color: [1,1,1,0]
                        on_press: root.search()
                    Button:
                        id: settings
                        text: '[||||]'
                        font_size: 12
                        size_hint: (.2,.4)
                        background_color: [1,1,1,0]
                        on_release: root.menu()
                StackLayout:
                    Image:
                        id: image
                        source: 'icons/maseno.png'




                 

                    


#screen buttons
<Screenbuttons>:
    pos_hint: {'top': 1}
    orientation: 'horizontal'
    GridLayout:
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'icons/maseno4.png'
        cols: 5
        size_hint: (1, .6)

        Button:
            id: publicScreen
            text: 'Public status'
            font_size: 14
            background_color: [0,0,0,0]
            on_release: root.publicstatus()
        Button: 
            id: chat
            text: 'Chats'
            background_color: [0,0,0,0]
            on_release: root.chat()
        Button: 
            id: notification
            text: 'Notifications'
            background_color: [0,0,0,0]
            on_release: root.notifications()
        Button: 
            id: call
            text: 'Calls'
            background_color: [0,0,0,0]
            on_release: root.calls()







#screens
