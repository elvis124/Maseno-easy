#helpwidget to read the documentation on how to acces this
<Helpwidget>:
    cols: 1
    StackLayout:
        orientation: 'tb-lr'
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'icons/maseno5.png'
        Button:
            text: 'Help'
            on_release: root.opentext()
